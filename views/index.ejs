<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Store</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="text-center">File store</h1>
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <div class="card p-3">
            <h3>File upload</h3>
            <form action="/upload" method="post" enctype="multipart/form-data">
              <div class="mb-3">
                <label for="file" class="form-label">File</label>
                <input type="file" class="form-control" name="file" id="file" />
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
          <div class="card p-3 mt-2">
            <h3 class="text-center mb-1">Uploaded files</h3>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Size</th>
                  <th scope="col">action</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i=0; i<files.length; i++) {%>
                  <tr>
                    <th scope="row"><%= i+1%></th>
                    <td><%= files[i].name%></td>
                    <td><%= files[i].size%></td>
                    <img src="" alt="">
                    <td class="row">
                      <div class="col">
                        <a href="/download/<%=files[i].name%>" class="btn btn-primary"><i class="bi bi-download"></i></a>
                      </div>
                      <div class="col">
                        <a href="/delete/<%=files[i].name%>" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                      </div>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>
  </body>
</html>
